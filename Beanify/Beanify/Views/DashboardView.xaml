<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Beanify.Views.DashboardView"
             BindingContext="{Binding DashboardViewModel, Source={StaticResource Locator}}">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="{Binding ProductModel.ImagePath, Mode=TwoWay}"
                   Aspect="AspectFill" 
                   WidthRequest="{Binding ScreenSize,Converter={StaticResource sizeToLandscapeConverter}}" ></Image>
            <Label Text="{Binding DashboardMessage}"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" TextColor="Black" />
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
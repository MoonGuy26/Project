<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Beanify.Views.DashboardView"
             
             BackgroundColor="AliceBlue"
             BindingContext="{Binding DashboardViewModel, Source={StaticResource Locator}}">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding DashboardMessage}"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" TextColor="Black" />
            <Button Text="Products"  Command="{Binding Commands[List]}" />
            <Button Text="Ordering views"  Command="{Binding Commands[OrderView]}" />
            <Button Command="{Binding Commands[Logout]}" Text="Logout"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
                                        <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="Medium" HorizontalOptions="CenterAndExpand" VerticalOptions="Center"/>
                                        <Label Text="{Binding Description}" FontSize="Small" HorizontalOptions="CenterAndExpand" VerticalOptions="Center" LineBreakMode="TailTruncation"/>
                                    </StackLayout>
                                    <StackLayout Orientation="Horizontal">

                                        <Label Text="{Binding Price, Converter={StaticResource floatToPriceConverter}, StringFormat=Price : '{0:}'}" HorizontalOptions="StartAndExpand" TextColor="{ StaticResource CoffeeBrown }" />
                                        <Button  
                                             Style="{StaticResource roundButtonStyle}"
                                             Text="More info"
                                             WidthRequest="100"
                                             Command="{Binding Path=BindingContext.Commands[LoadingDetails], Source={x:Reference Page}}"
                                             CommandParameter="{Binding . }}"
                                             VerticalOptions="End" 
                                             HorizontalOptions="End"/>
                                    </StackLayout>

                                </StackLayout>
                                
                                <Image Source="seperator.png" HorizontalOptions="Center"/>

                            </StackLayout>-->
                        </customControls:CustomViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
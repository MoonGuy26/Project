<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Beanify.Views.ProductsView"
             xmlns:customControls="clr-namespace:Beanify.Utils.Controls"
             BackgroundColor="AliceBlue"
             BindingContext="{Binding ProductsViewModel, Source={StaticResource Locator}}"
             x:Name="Page">
    <ContentPage.Content>
        <StackLayout>
            <ListView ItemsSource="{Binding Products}" HasUnevenRows="True" SeparatorColor="CornflowerBlue">
                <ListView.Header>
                </ListView.Header>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <customControls:CustomViewCell SelectedBackgroundColor="AliceBlue">
                            <StackLayout x:Name="Item" Orientation="Horizontal" Margin="25, 25, 25, 25">
                                <Image Source="{Binding ImagePath}" Aspect="AspectFill" HeightRequest="125" WidthRequest="125"/>
                                <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand" VerticalOptions="Center">
                                    <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="Medium" HorizontalOptions="CenterAndExpand" VerticalOptions="Center"/>
                                    <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                                        <Label Text="Price : " HorizontalOptions="Start" VerticalOptions="Center"/>
                                        <Label Text="{Binding Price, Converter={StaticResource floatToPriceConverter}}" VerticalOptions="Center"/>
                                    </StackLayout>
                                </StackLayout>
                                <Button  Text="More info >"                                        
                                         Command="{Binding Path=BindingContext.Commands[LoadingDetails], Source={x:Reference Page}}"
                                         CommandParameter="{Binding . }}"
                                         VerticalOptions="End" 
                                         HorizontalOptions="End"
                                         BorderColor="Transparent"
                                         BackgroundColor="Transparent"/>
                            </StackLayout>
                        </customControls:CustomViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
@model IEnumerable<BeanifyWebApp.Models.ProductModel>

@{
    ViewBag.Title = "Index";
}
<br/>
<h2>Products</h2>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
    {
        <tr class="colorize cursor"
            onclick="document.location='/MvcProductModels/Edit/@Html.Raw(item.Id) '">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>


            @if (!item.IsAvailable)
             {
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td class="alert-danger text-center">Out of stock</td>
            }
            else
            {
                <td colspan="2">
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
            }
        </tr>
        
    }
        <tr class="alert-link">
            <td colspan="3">
                @Html.ActionLink("Add Product", "Create", "MvcProductModels",
                        routeValues: null, htmlAttributes: new { @class = "btn btn-secondary btn-lg" }
                        )
            </td>
        </tr>
    </tbody>

</table>
